.tx-info {
	display: flex;
	flex-direction: column;
	gap: var(--space-3);
	align-self: stretch;
}

.tx-info__item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	align-self: stretch;
}

.tx-info__item__label {
	display: flex;
	align-items: center;
	gap: var(--space-2);
}

.tx-info__item__text {
	color: var(--color-gray-600);
	font-size: 1rem;
	font-weight: 300;
	line-height: 20px;
}

.tx-info__item__text__value {
	color: var(--color-gray-700);
	font-size: 1rem;
	font-weight: 400;
	line-height: 20px;
}

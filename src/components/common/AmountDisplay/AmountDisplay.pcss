.amount_display {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: var(--sp-md);
    border-radius: var(--border-radius);
}

.amount_display_input {
    width: 100%;
    overflow: hidden;
    color: var(--color-gray-700);
    text-align: center;
    font-size: 48px;
    font-style: normal;
    font-weight: 500;
    line-height: 56px;
    letter-spacing: -0.96px;
    border: none;
    outline: none;
    background: transparent;
}
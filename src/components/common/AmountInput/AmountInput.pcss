.amount-input {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	padding: var(--space-3);
}

.amount-input__input {
	flex: 1 0;
	overflow: hidden;
	color: var(--color-gray-700);
	text-align: center;
	font-size: 32px;
	font-style: normal;
	font-weight: 500;
	line-height: 36px;
	letter-spacing: -0.64px;
	border: none;
	outline: none;
	background: transparent;
}

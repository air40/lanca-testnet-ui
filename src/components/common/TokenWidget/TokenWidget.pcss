.token_widget {
	display: inline-flex;
	align-items: center;
	gap: var(--space-2);
}

.token_info {
	display: inline-flex;
	align-items: center;
	gap: var(--space-1);
}

.native_token_value {
	display: flex;
	color: var(--color-accent-700);
	font-size: 1rem;
	font-weight: 500;
	line-height: 1.5rem;
	gap: var(--space-1);
}

.native_token_symbol {
	color: var(--color-gray-600);
	font-size: 1rem;
	font-weight: 500;
	line-height: 1.5rem;
}

.loader {
	border-radius: var(--space-2) !important;
}

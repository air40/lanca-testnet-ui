.bridge_content {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: var(--space-2);
	align-self: stretch;
}

.bridge_content_from,
.bridge_content_to {
	display: flex;
	height: 160px;
	width: 160px;
	padding: var(--space-7);
	justify-content: center;
	align-items: center;
	gap: 10px;
	flex: 1 0 0;
	border-radius: var(--space-4);
	background-color: var(--color-gray-50);
}

.bridge_content_arrow {
	display: flex;
	width: 24px;
	height: 24px;
	padding: var(--space-1);
	justify-content: center;
	align-items: center;
	background-color: var(--color-gray-50);
	border-radius: var(--space-2);
}

.bridge_content_image {
	width: 48px;
	height: 48px;
}

@media only screen and (min-width: 641px) and (max-width: 1024px) {
	.bridge_content_from,
	.bridge_content_to {
		width: auto;
	}
}

@media only screen and (max-width: 640px) {
	.bridge_content_from,
	.bridge_content_to {
		width: auto;
	}
}

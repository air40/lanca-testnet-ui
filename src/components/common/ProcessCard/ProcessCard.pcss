.process-card {
	display: flex;
	width: 394px;
	flex-direction: column;
	align-items: center;
	border-radius: var(--space-4);
	padding: var(--space-4);
	gap: var(--space-4);
}

.process-card__title {
	display: flex;
	flex: 1 0 0;
	font-size: 1.125rem;
	font-weight: 500;
	line-height: 22px;
	color: var(--color-gray-700);
}

@media only screen and (max-width: 768px) {
	.process-card {
		width: 448px;
	}
}

@media only screen and (max-width: 576px) {
	.process-card {
		width: 332px;
	}
}

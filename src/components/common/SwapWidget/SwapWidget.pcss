.swap_widget {
	display: flex;
	flex-direction: column;
	max-width: 394px;
	width: 100%;
	border-radius: var(--space-5);
	align-items: center;
	position: relative;
}

@media only screen and (min-width: 641px) and (max-width: 1024px) {
	.swap_widget {
		max-width: 448px;
	}
}

@media only screen and (max-width: 640px) {
	.swap_widget {
		max-width: 332px;
	}
}

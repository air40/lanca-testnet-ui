.footer {
	display: flex;
	justify-content: center;
	gap: var(--space-4);
	margin-bottom: var(--space-8);
}

.footer-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: var(--space-3);
}

.footer-item__heading {
	font-size: 1rem;
	color: var(--color-gray-600);
	font-weight: 500;
	line-height: 20px;
	text-align: center;
}

.footer-item__actions {
	display: flex;
	align-items: center;
	gap: var(--space-2);
}
